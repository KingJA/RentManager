<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="280dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <EditText
        android:id="@+id/et_station_input"
        style="@style/font_edit_3_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入中介身份证后6位"
        android:maxLength="6"
        android:padding="24dp"/>

    <View style="@style/divider_nomal_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cancle"
            style="@style/font_9_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="取消"/>

        <View style="@style/divider_nomal_vertical"></View>

        <TextView
            android:id="@+id/tv_confirm"
            style="@style/font_blue_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="确定"/>

    </LinearLayout>


</LinearLayout>