<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

        <com.tdr.wisdome.view.material.MaterialEditText
            android:id="@+id/met_loign_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户名"
            android:textSize="15sp"
            app:met_clearButton="true"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/bg_blue"
            app:met_singleLineEllipsis="true" />


        <com.tdr.wisdome.view.material.MaterialEditText
            android:id="@+id/met_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:inputType="textPassword"
            android:layout_marginTop="12.5dp"
            android:textSize="15sp"
            app:met_clearButton="true"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/bg_blue"
            app:met_singleLineEllipsis="true" />



        <TextView
            style="@style/font_9_12"
            android:id="@+id/tv_login_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="忘记密码"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

    <com.kingja.supershapeview.SuperShapeTextView
        android:id="@+id/stv_login_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="登录"
        android:textColor="@color/bg_blue"
        app:super_cornerRadius="4dp"
        app:super_strokeWidth="1dp"
        app:super_strokeColor="@color/bg_blue"/>


</LinearLayout>
