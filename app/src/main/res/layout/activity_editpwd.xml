<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="26dp"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <com.tdr.wisdome.view.material.MaterialEditText
            android:id="@+id/et_oldPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="原密码"
            style="@style/font_9_15"
            app:met_clearButton="true"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/bg_blue"
            app:met_singleLineEllipsis="true" />


        <com.tdr.wisdome.view.material.MaterialEditText
            android:id="@+id/et_newPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码（长度6-16位）"
            style="@style/font_9_15"
            android:inputType="textPassword"
            app:met_clearButton="true"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/bg_blue"
            app:met_singleLineEllipsis="true" />


        <com.tdr.wisdome.view.material.MaterialEditText
            android:id="@+id/et_repeatPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="确认密码"
            android:inputType="textPassword"
            style="@style/font_9_15"
            app:met_clearButton="true"
            app:met_floatingLabel="normal"
            app:met_primaryColor="@color/bg_blue"
            app:met_singleLineEllipsis="true" />



        <com.kingja.supershapeview.SuperShapeTextView
            android:layout_marginTop="12dp"
            android:id="@+id/stv_editpwd_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="修改"
            android:textColor="@color/bg_blue"
            app:super_cornerRadius="4dp"
            app:super_strokeWidth="1dp"
            app:super_strokeColor="@color/bg_blue"/>
    </LinearLayout>


</LinearLayout>