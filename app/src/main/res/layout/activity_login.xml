<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    tools:context=".actvitiy.LoginActivity">


    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:background="@color/colorStatus">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/login_logo" />

        <com.tdr.wisdome.view.TitleIndicator
            android:id="@+id/titleIndicator_choose"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            app:footerColor="@color/white"
            app:footerLineHeight="2dp"
            app:footerTriangleHeight="3.0dp"
            app:textColor="@drawable/indicator_change"
            app:textSizeNormal="@dimen/common_text_size_middle"
            app:textSizeSelected="@dimen/common_text_size_middle" />
    </RelativeLayout>


    <com.tdr.wisdome.view.ViewPagerCompat
        android:id="@+id/pager_compat"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:duplicateParentState="true" />

</LinearLayout>
